{
  "bracketSpacing": true,
  "proseWrap": "always",
  "singleQuote": true,
  "tabWidth": 2,
  "printWidth": 110,
  "trailingComma": "all",
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "compiler": "0.8.18",
        "tabWidth": 4,
        "singleQuote": false,
        "explicitTypes": "never"
      }
    },
    {
      "files": "*.ts,*js",
      "options": {
        "importOrder": ["<THIRD_PARTY_MODULES>", "^[./]"],
        "importOrderParserPlugins": ["typescript"],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true
      }
    }
  ]
}
